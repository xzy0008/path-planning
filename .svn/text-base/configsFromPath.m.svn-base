function out=configsFromPath(curPath)
%CONFIGSFROMPATH Determines a list of coinfigurations from a Dubins path
%
%   Syntax: configsFromPath(curPath)
%       - curPath = array of ppSegments that define a path
%
%   Output: 
%       returns an array of configurations that define the path

if (curPath(1).ccw==2) % straight line
    curConfigs=[curPath(1).startEast curPath(1).startNorth curPath(1).heading curPath(1).speed];
elseif (curPath(1).ccw==0) % right hand turn
    % find initial heading from final heading and total angle turned
    curConfigs=[curPath(1).startEast curPath(1).startNorth curPath(1).heading-curPath(1).thetaTotal curPath(1).speed];
elseif (curPath(1).ccw==1) % left hand turn
    % find initial heading from final heading and total angle turned
    curConfigs=[curPath(1).startEast curPath(1).startNorth curPath(1).heading+curPath(1).thetaTotal curPath(1).speed];
end


for ii=1:length(curPath)
    % add configuration to list
    curConfigs=[curConfigs;
                curPath(ii).endEast curPath(ii).endNorth curPath(ii).heading curPath(ii).speed];

end

out=curConfigs;